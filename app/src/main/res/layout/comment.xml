<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="20dp"
    >

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/txt_cm_user_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="user_account"
        android:textSize="15dp"
        android:textColor="#d71e1e"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:id="@+id/layout_cmt_survey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/txt_cm_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="this_is_demo_content" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/layout_comment_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01/01/2011 08:05"
        android:textSize="12dp"
        android:gravity="right"
        android:layout_marginRight="100dp"
        android:id="@+id/txt_cmt_datetime"/>

</LinearLayout>